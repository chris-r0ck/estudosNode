{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2>Editar Categoria: </h2>
<div class="card">
    <div class="card-body">
<form action="/admin/categoria/edit" method="post">
    <input type="hidden" name="id" value="{{categoria._id}}">
    <label for="nome">Nome: </label>
    <input type="text" class="form-control" name="nome" id="nome" value="{{categoria.nome}}">
    <label for="slug">Slug: </label>
    <input type="text" class="form-control" name="slug" id="slug" value="{{categoria.slug}}"><br>
    <button class="btn btn-success">Editar Categoria</button>
</form>
</div>
</div>
