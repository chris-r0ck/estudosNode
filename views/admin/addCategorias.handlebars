{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2>Nova Categoria: </h2>
<div class="card">
    <div class="card-body">
<form action="/admin/categoria/add" method="post">
    <label for="nome">Nome: </label>
    <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome da Categoria">
    <label for="slug">Slug: </label>
    <input type="text" class="form-control" name="slug" id="slug" placeholder="Slug da Categoria"><br>
    <button class="btn btn-success">Criar Categoria</button>
</form>
</div>
</div>