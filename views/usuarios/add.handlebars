{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}
<h2>Cadastro de Usuarios</h2>
<hr>
<div class="card mt-4">
    <div class="card-body">
        <form action="/usuarios/useradd" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" class="form-control" required>
            <label for="login">Login: </label>
            <input type="text" name="login" class="form-control" required>
            <label for="pass">Senha: </label>
            <input type="password" name="pass" class="form-control" required>
            <label for="pass2">Repita a Senha:  </label>
            <input type="password" name="pass2" class="form-control" required><br>
            <button type="submit" class="btn btn-success">Cadastrar Usuario</button>
        </form>
    </div>
</div>